<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:windowBackground"
    tools:context=".ui.settings.SettingsFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="Choose your favourite theme"
        android:layout_marginBottom="5dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="?colorPrimary"
        android:layout_height="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/teal"
          android:layout_width="0dp"
          android:layout_weight=".2"
          android:layout_margin="2dp"
          app:backgroundTint="@color/colorPrimary"
          android:layout_height="wrap_content"
          tools:ignore="ButtonStyle" />

      <Button
          android:id="@+id/green"
          android:layout_width="0dp"
          android:layout_weight=".2"
          android:layout_margin="2dp"
          app:backgroundTint="@color/colorPrimaryGreen"
          android:layout_height="wrap_content"
          tools:ignore="ButtonStyle" />

      <Button
          android:id="@+id/ash"
          android:layout_width="0dp"
          android:layout_weight=".2"
          android:layout_margin="2dp"
          app:backgroundTint="@color/colorPrimaryAsh"
          android:layout_height="wrap_content"
          tools:ignore="ButtonStyle" />

      <Button
          android:id="@+id/blue"
          android:layout_width="0dp"
          android:layout_weight=".2"
          android:layout_margin="2dp"
          app:backgroundTint="@color/colorPrimaryBlue"
          android:layout_height="wrap_content"
          tools:ignore="ButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/navy"
          android:layout_width="0dp"
          android:layout_weight=".2"
          android:layout_margin="2dp"
          app:backgroundTint="@color/colorPrimaryNavy"
          android:layout_height="wrap_content"
          tools:ignore="ButtonStyle" />

      <Button
          android:id="@+id/orange"
          android:layout_width="0dp"
          android:layout_weight=".2"
          android:layout_margin="2dp"
          app:backgroundTint="@color/colorPrimaryOrange"
          android:layout_height="wrap_content"
          tools:ignore="ButtonStyle" />

      <Button
          android:id="@+id/purple"
          android:layout_width="0dp"
          android:layout_weight=".2"
          android:layout_margin="2dp"
          app:backgroundTint="@color/colorPrimaryPurple"
          android:layout_height="wrap_content"
          tools:ignore="ButtonStyle" />

      <Button
          android:id="@+id/red"
          android:layout_width="0dp"
          android:layout_weight=".2"
          android:layout_margin="2dp"
          app:backgroundTint="@color/colorPrimaryRed"
          android:layout_height="wrap_content"
          tools:ignore="ButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/dark"
          android:layout_width="100dp"
          android:layout_margin="2dp"
          app:backgroundTint="#1D0F0F"
          android:layout_height="wrap_content"
          tools:ignore="ButtonStyle" />

    </LinearLayout>

  </LinearLayout>

</FrameLayout>